<%- include('../partials/header.ejs') %>
<div class="container black-text">
<h3 class="">Edit Stock</h3>
<form action="/stocks/<%=stock._id%>/edit?_method=PUT" method="POST">
  <label
    >Stock Name:
    <input type="text" name="name" value="<%=stock.name%>" />
  </label>
  <br />
  <label class="mt-3"
    >Ticker:
    <input type="text" name="ticker" value="<%=stock.ticker%>" />
  </label>
  <br />
  <!-- <label>Price:
        <input type="number" step="0.01" name="price" value="<%=stock.price%>">
    </label> -->
  <br />
  <label
    >Feeling:
    <select name="feeling" id="select_feeling">
      <option value="Bullish">Bullish</option>
      <option value="Bearish">Bearish</option>
    </select>
  </label>
  <br />
  <button class="btn green" type="submit">Edit Stock</button>
</form>
</div>
<%- include('../partials/footer.ejs') %>
