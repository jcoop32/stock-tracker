<%- include('../partials/header.ejs') %>

<h3 class="mt-3">Edit Stock</h3>
<form action="/stocks/<%=stock._id%>/edit?_method=PUT" method="POST">
  <label
    >Stock Name:
    <input type="text" name="name" value="<%=stock.name%>" />
  </label>
  <br />
  <label class="mt-3"
    >Ticker:
    <input type="text" name="ticker" value="<%=stock.ticker%>" />
  </label>
  <br />
  <!-- <label>Price:
        <input type="number" step="0.01" name="price" value="<%=stock.price%>">
    </label> -->
  <br />
  <label
    >Feeling:
    <select name="feeling">
      <option value="Bullish">Bullish</option>
      <option value="Bearish">Bearish</option>
    </select>
  </label>
  <br />
  <button class="btn btn-primary mt-3" type="submit">Edit Stock</button>
</form>

<%- include('../partials/footer.ejs') %>
