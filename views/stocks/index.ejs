<%- include('../partials/header.ejs') %>


<div class="container text-center table-responsive">
<h1 class="text-start">Your Stocks</h1>
<h2><%=date%></h2>
</div>
<table class="table container table-dark table-bordered text-center">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Ticker</th>
        <th scope="col">Price (as of <%=time%>)</th>
        <th scope="col">Feeling</th>
      </tr>
    </thead>
    <tbody>
        <% for(let i = 0; i < stock.length; i++) {%>
            <tr class=""> 
                <td><a id="stockName" href="/stocks/<%=stock[i]._id%>"><%= stock[i].name %></a></td></a>
                <td class="ticker text-center"><%= stock[i].ticker %></td>
                <td id="api-price">$<%= stock[i].price %></td>
                <% if(stock[i].feeling === 'Bullish'){%>
                    <td style="color: green;"><%= stock[i].feeling %>↑ </td>
                <%} else{%>
                    <td style="color: red;"><%= stock[i].feeling %>↓ </td>
                <%} %>
                <td class="hover-section">
                    <a href="/stocks/<%=stock[i]._id%>/edit">
                        <input type="image" src="/images/pencil.svg" >
                    </a>
                </td>
                <td class="hover-section">
                    <form action="/stocks/<%=stock[i]._id%>?_method=DELETE" method='POST' class="tools">
                           <input type="image" src="/images/trash.svg" >
                    </form>
                </td>
            </tr>
        <%} %>
    </tbody>
  </table>
  <div class="container">
      <a href="/stocks/new" >
        <input type="image" src="/images/plus-square-fill.svg" >
    </a>

  </div>
  
  

<%- include('../partials/footer.ejs') %>
