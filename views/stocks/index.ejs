<%- include('../partials/header.ejs') %>


<div class="container green-text">
<h2><%=date%></h2>
</div>
<table class="container centered grey-text darken-2">
    <thead class="">
      <tr>
        <th>Name</th>
        <th>Ticker</th>
        <th>Price (as of <%=time%>)</th>
        <th>Feeling</th>
      </tr>
    </thead>
    <tbody class="black-text">
        <% for(let i = 0; i < stock.length; i++) {%>
            <tr> 
                <td><a id="stockName" href="/stocks/<%=stock[i]._id%>"><%= stock[i].name %></a></td></a>
                <td class="ticker"><%= stock[i].ticker %></td>
                <td id="api-price">$<%= stock[i].price %></td>
                <% if(stock[i].feeling === 'Bullish'){%>
                    <td style="color: green;"><%= stock[i].feeling %>↑ </td>
                <%} else{%>
                    <td style="color: red;"><%= stock[i].feeling %>↓ </td>
                <%} %>
                <td class="hover-section">
                    <a href="/stocks/<%=stock[i]._id%>/edit">
                        <input type="image" src="/images/pencil.svg" >
                    </a>
                </td>
                <td class="hover-section">
                    <form action="/stocks/<%=stock[i]._id%>?_method=DELETE" method='POST' class="tools">
                           <input type="image" src="/images/trash.svg" >
                    </form>
                </td>
            </tr>
        <%} %>
    </tbody>
  </table>
  <div class="container">
      <a href="/stocks/new" > <i class="material-icons green-text small">add_circle</i></a>

  </div>
  
  

<%- include('../partials/footer.ejs') %>
